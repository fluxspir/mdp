PROG=stub
SRC=../../../src
OBJECTS= \
	stub.o \
	${SRC}/debug.o \
	${SRC}/str.o \
	${SRC}/utils.o \
	${SRC}/xmalloc.o

OBJECTS+=${EXTRA_OBJECTS}
CFLAGS+=-I${SRC}/

all: ${PROG}

arc4random.o:
	cp ${SRC}/arc4random.o .

strlcpy.o:
	cp ${SRC}/strlcpy.o .

strlcat.o:
	cp ${SRC}/strlcat.o .

wcslcpy.o:
	cp ${SRC}/wcslcpy.o .

${PROG}: ${OBJECTS}
	${CC} ${LDFLAGS} -o ${PROG} ${OBJECTS} ${CURSESLIB} 

test: ${PROG}
	@find . -name "test_*.sh" | xargs -n 1 sh

clean:
	rm -f ${PROG} *.o *core test.expected test.stdout test.stderr test.diff
